<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="card_block">
        <div class="b_title">
          <div class="page-header">
            <div class="row" data-hook="checkout_header">
              <h1 class="columns three alpha" data-hook="checkout_title">
                <%= Spree.t(:checkout) %>
              </h1>
              <div class="columns thirteen omega" data-hook="checkout_progress">
                <h3><%= checkout_progress %></h3>
              </div>
            </div>
          </div>
        </div>

        <div id="checkout" data-hook>  
          <div class="row" data-hook="checkout_content">
            <%= form_for @order, :url => update_checkout_path(@order.state), :html => { :id => "checkout_form_#{@order.state}" } do |form| %>
              <div class="col-md-8 col-md-offset-2">
                <% if @order.state == 'address' || !@order.email? %>
                  <p class="field" style='clear: both'>
                    <%= form.label :email, class: 'input__title copy' %><br />
                    <%= form.text_field :email, class: 'form-control' %>
                  </p>
                <% end %>

                <%= render @order.state, :form => form %>
              </div>

              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
Spree.current_order_id = "<%= @order.number %>"
Spree.current_order_token = "<%= @order.guest_token %>"
</script>

<% if I18n.locale != :en %>
  <script src="<%= assets_prefix %>/jquery.validate/localization/messages_<%= I18n.locale.to_s.downcase.gsub("-", "") %>.js"></script>
<% end %>
